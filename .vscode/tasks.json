{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Debug Build",
      "command": "clang++",
      "args": [
        "-g3",
        "-std=c++20",
        "-Wall",
        "-DDEBUG",
        "-Wextra",
        "${file}",
        "-o",
        "${workspaceFolder}/Debug/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Release Build",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${workspaceFolder}/Release/${fileBasenameNoExtension}"
      ],
      "group": "build"
    }
  ]
}
