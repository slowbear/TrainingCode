{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Debug Build",
      "command": "clang++",
      "args": [
        "-g3",
        "-std=c++2a",
        // "-fsanitize=undefined",
        "-Wall",
        "-DDEBUG",
        "-Wextra",
        "${file}",
        "-o",
        "${workspaceFolder}/Debug/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "Release Build",
      "command": "clang++",
      "args": [
        "-std=c++2a",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${workspaceFolder}/Release/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "presentation": {
        "clear": true
      }
    }
  ]
}
