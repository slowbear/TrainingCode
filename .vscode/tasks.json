{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Debug Build(Pure C)",
      "command": "gcc",
      "args": [
        "-g3",
        "-std=c17",
        "-Wall",
        "-DDEBUG",
        "-Wextra",
        "${file}",
        "-o",
        "${workspaceFolder}/Debug/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Release Build(Pure C)",
      "command": "gcc",
      "args": [
        "-std=c17",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${workspaceFolder}/Release/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Debug Build(C++)",
      "command": "clang++",
      "args": [
        "-g3",
        "-std=c++2a",
        "-Wall",
        "-DDEBUG",
        "-Wextra",
        "${file}",
        "-o",
        "${workspaceFolder}/Debug/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Release Build(C++)",
      "command": "clang++",
      "args": [
        "-std=c++2a",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${workspaceFolder}/Release/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
